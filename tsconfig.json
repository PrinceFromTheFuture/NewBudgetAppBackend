{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,

    "traceResolution": true // Optional: Enables tracing of module resolution for debugging
  }
}
