{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true
  }
}
